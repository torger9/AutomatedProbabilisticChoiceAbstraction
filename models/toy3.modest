option "dtmc";


int x = 0;
int y = 0;
int a = 0;
int z = 1;
int clk = 0;

action tick;

property p0 = Pmax(<>( (clk == 3) && (z==0)));
property p1 = Pmax(<>( (clk == 3) && (z==1)));
property p2 = Pmax(<>( (clk == 3) && (z==2)));

process Clock() {

	tick {= clk += 1 =};

	if (clk!=3) {
		Clock()
	}
    else {
        stop
    }

}

process Top() {

    tick palt {
        :(1/2): {= a = 1 =}
        :(1/2): {= a = 0 =}
    };


    if(a <= 0) {
        tick palt {
            :(1/3): {= x = 1, y=1 =}

            :(1/3): {= x = 1, y=2 =}

            :(1/3): {= x = 2, y=1 =}
        }
    }
    else {
        tick palt {
            :(1/3): {= x = 2, y=2 =}

            :(1/3): {= x = 3, y=1 =}

            :(1/3): {= x = 3, y=2 =}
        }
    };



	if(x > y) {
		tick {= z+=1 =}
	}
	else if (x <y ){
		tick {= z-=1 =}
	}
    else {
        tick
    };


	Top()



}

par{
    :: 	Top()
    ::  Clock()
    }
    
